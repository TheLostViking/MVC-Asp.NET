@{
    ViewData["Title"] = "Course List";
}
@model IEnumerable<App.Entities.Course>

<a class="btn btn-primary mb-3" asp-action="AddCourse">Add Course</a>
<h2>Course List</h2>

<table class="table">
  <thead>
    <tr class="table-primary">
      <th></th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Length</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>      
    @foreach (var course in Model)
    {
        <tr>
            <td style="text-align:center;">
             <a asp-action="Edit" asp-route-id="@course.Id"><i class="fal fa-edit"></i></a>
            </td>
            <td>@course.Title</td>
            <td>@course.Description</td>
            <td>@course.Length</td>
            <td>@course.Category</td>
            <td>@course.Price</td>
        </tr>  
    }    
  </tbody>
</table>


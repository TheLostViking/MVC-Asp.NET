@{
  ViewData["Title"] = "Student List";
}
@model IEnumerable<App.Models.StudentModel>

<a class="btn btn-primary mb-3" asp-action="AddStudent">Add Student</a>
<h2>Student List</h2>

<table class="table">
  <thead>
    <tr class="table-primary">
      <th></th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Adress</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var student in Model)
    {
      <tr>
        <td style="text-align:center;">
          <a asp-action="EditStudent" asp-route-id="@student.StudentId" class="btn btn-primary btn-sm">Edit</a>
        </td>
        <td>@student.FirstName</td>
        <td>@student.LastName</td>
        <td>@student.Email</td>
        <td>@student.Phone</td>
        <td>@student.Adress</td>
        <td style="text-align: center;">
          <a asp-action="DeleteStudent" asp-route-Id="@student.StudentId" class="btn btn-primary btn-sm">Delete</a>
        </td>
        <td>
          <a asp-controller="BuyCourses" asp-action="Index" asp-route-studentEmail="@student.Email" class="btn btn-primary btn-sm">Buy Courses</a>
        </td>
      </tr>
    }
  </tbody>
</table>